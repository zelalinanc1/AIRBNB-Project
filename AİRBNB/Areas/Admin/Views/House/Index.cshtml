@using EntityLayer.Concrete
@model List<House>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<br />
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kategoriler</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-hover margin bottom">
                            <thead>
                                <tr>


                                    <th>Açıklama </th>
                                    <th>Kategori </th>
                                    
                                   
                                  
                                    <th>Ücret </th>
                                    
                                    <th>Oda Sayısı </th>
                                    <th>Resim </th>
                                   
                                    <th>Sil </th>
                                    <th>Güncelle </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.HouseDescription</td>
                                        <td>@item.CategoryId</td>
                                        
                                       
                                      
                                        <td>@item.HousePrice</td>
                                       
                                        <td>@item.HouseRoomNumbers</td>
                                        <td>@item.HouseImage1</td>
                                        <td><a href="#" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz');" class="btn btn-danger">Pasif Yap</a></td>
                                        <td><a href="#" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Admin/House/AddHouse/" class="btn btn-info">Yeni Ev Ekle</a>
                    </div>
                    

                   

                </div>
            </div>
        </div>
    </div>
</div>
<form method="post" asp-action="AddHouseProperty" asp-controller="House">

<div class="form-group">
    <input type="text" class="form-control" id="txtPropertyId" placeholder="Id degeri">
    <br />

</div>
<div class="form-group">
    <input type="text" class="form-control" id="txtPropertyName" placeholder="İsim degeri">
    <br />

</div>

   @* <button type="submit" id="sendbutton4" class="btn btn-info">Kaydet</button>*@
    <button type="button" id="sendbutton4">GÖNDER</button>

</form>
   



<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script type="text/javascript">

    $('#sendbutton4').click(function () {

        let property = {

            PropertyId: $("#txtPropertyId").val(),

            PropertyName: $("#txtPropertyName").val()

        };
        $.ajax({

            type: "post",
            url: "/Admin/House/AddHouseProperty/", // fix this to your liking
            data: property,

            success: function (func) {

                let result = jQuery.parseJSON(func);
                alert(result);
                alert("İşlem Başarılı");






            }
        });

    });

</script>