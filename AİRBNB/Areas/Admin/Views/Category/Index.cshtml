@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
 <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox ">
                                    <div class="ibox-title">
                                        <h5>Kategoriler</h5>
                                        <div class="ibox-tools">
                                            <a class="collapse-link">
                                                <i class="fa fa-chevron-up"></i>
                                            </a>
                                            
                                        </div>
                                    </div>
                                    <div class="ibox-content">

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <table class="table table-hover margin bottom">
                                                    <thead>
                                                    <tr>
                                                        
                                  
                                                    <th>ID</th>
                                                    <th>Kategori Adı </th>
                                                    <th>Sil </th>
                                                    <th>Güncelle </th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                         @foreach (var item in Model)
                                                    {
                                                    <tr>
                                                      <td>@item.CategoryId</td>
                                                      <td>@item.CategoryName</td>
                                                      <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId/" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz');" class="btn btn-danger">Pasif Yap</a></td>
                                                     <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId/" class="btn btn-success">Güncelle</a></td>

                                                    </tr>
                                                    }
                                                    </tbody>
                                                    
                                                </table>
                                                <a href="/Admin/Category/AddCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
                                            </div>
                                           
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>

